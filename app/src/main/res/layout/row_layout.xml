<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/rowContainer"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_img_chat_one"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

       <!-- <TextView
            android:id="@+id/playerName"
            android:layout_toStartOf="@+id/playerTargetName"
            android:layout_toEndOf="@+id/playerImage"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tasos Nikas Manikas"/>-->

        <TextView
            android:id="@+id/text"
            android:layout_toStartOf="@+id/playerTargetName"
            android:layout_toEndOf="@+id/profileImage"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ntaras Test Team"/>

        <TextView
            android:id="@+id/time_posted"
            android:layout_below="@+id/text"
            android:layout_toEndOf="@+id/profileImage"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Recurve Men"/>

        <TextView
            android:id="@+id/playerTargetName"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/profileImage"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="07A"/>

    </RelativeLayout>

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/playerLeagueName"
        android:background="@color/color_chat_user_name"
        android:visibility="gone"
        tools:visibility="visible"/>

</android.support.v7.widget.CardView>